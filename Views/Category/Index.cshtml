@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container" >
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-secondary" >Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill p-2"></i>
                Create Categpory
            </a>
        </div>
    </div>
</div>

<table class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>OrderDisplay</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>